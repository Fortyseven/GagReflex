{
    "manifest_version": 2,
    "name":             "Gag Reflex",
    "description":      "Highlights satirical or questionable website content.",
    "version":          "2.4.1.1",
    "icons":            {
        "16":  "app/assets/icon_16.png",
        "48":  "app/assets/icon_48.png",
        "128": "app/assets/icon_128.png"
    },
    "browser_action":   {
        "default_icon":  "app/assets/icon.png",
        "default_popup": "app/popup.html"

    },
    "background":       {
        "page": "app/background.html"
    },
    "content_scripts":  [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "app/assets/sweetalert.css"
            ],
            "js":      [
                "bower_components/zepto/zepto.min.js",
                "bower_components/sweetalert/dist/sweetalert.min.js",
                "app/gag_renderer_single_site.js",
                "app/gag_renderer_facebook.js",
                "app/gag_renderer_reddit.js",
                "app/gag.js",
                "app/gag_config.js",
                "app/content.js"
            ]
        }
    ],
    "permissions":      [
        "activeTab",
        "storage",
        "*://*.facebook.com/*",
        "*://*.reddit.com/*"
    ]
}