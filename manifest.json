{
    "manifest_version": 2,
    "name"            : "Gag Reflex",
    "description"     : "Highlights Facebook posts coming from satire websites.",
    "version"         : "0.1",
    "browser_action"  : {
        "default_icon": "icon.png"
//        ,"default_popup"     : "popup.html"
    },
    "content_scripts" : [
        {
            "matches": [
                "*://*.facebook.com/*"
            ],
            "js"     : [
                "bower_components/zepto/zepto.min.js",
                "content.js"
            ],
            "css"    : [
                "style.css"
            ]
        }
    ],
    "permissions"     : [
        "activeTab",
        "*://*.facebook.com/*"
    ]
}