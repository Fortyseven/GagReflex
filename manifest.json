{
    "manifest_version": 2,
    "name"            : "Gag Reflex",
    "description"     : "Highlights Facebook posts coming from satire websites.",
    "version"         : "0.1",
    "browser_action"  : {
        "default_icon" : "app/assets/icon.png",
        "default_popup": "app/popup.html"
    },
    "content_scripts" : [
        {
            "matches": [
                "*://*.facebook.com/*"
            ],
            "js"     : [
                "bower_components/zepto/zepto.min.js",
                "app/content.js"
            ],
            "css"    : [
                "app/assets/style.css"
            ]
        }
    ],
    "permissions"     : [
        "activeTab",
        "storage",
        "*://*.facebook.com/*"
    ]
}