{
    "manifest_version"  : 2,
    "name"              : "Gag Reflex",
    "description"       : "Highlights Facebook posts coming from satire websites.",
    "version"           : "0.1",
    "browser_action"    : {
        "default_icon"      : "icon.png",
        "default_popup"     : "popup.html"
    },
    "permissions"       : [
        "activeTab",
        "*://*.facebook.com/*"
    ]
}